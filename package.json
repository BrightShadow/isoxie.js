{
    "name": "isoxie-js",
    "version": "1.0.0",
    "description": "Isoxie is a dream to create a good isometric web based game engine, completely written in typescript and based on wonderful Pixie.js. Hope it will be a good shot.",
    "main": "index.js",
    "scripts": {
        "start": "webpack-dev-server --port 9000 --inline --progress --profile --colors --watch --content-base src/ --mode development",
        "build": "webpack --config webpack.config.js --mode production",
        "build.prod": "webpack --config webpack.config.js -p",
        "test": "karma start karma.config.js"
    },
    "keywords": [
        "webpack",
        "webpack4",
        "typescript"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/BrightShadow/isoxie.js.git"
    },
    "author": "BrightShadow",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/BrightShadow/isoxie.js/issues"
    },
    "homepage": "https://github.com/BrightShadow/isoxie.js#readme",
    "devDependencies": {
        "@types/jasmine": "2.8.7",
        "@types/node": "7.0.0",
        "awesome-typescript-loader": "5.2.0",
        "jasmine-core": "3.1.0",
        "karma": "2.0.4",
        "karma-jasmine": "1.1.2",
        "karma-phantomjs-launcher": "1.0.4",
        "karma-webpack": "3.0.0",
        "source-map-loader": "0.2.3",
        "tslint": "5.10.0",
        "tslint-loader": "3.6.0",
        "typescript": "2.8.3",
        "webpack": "4.12.0",
        "webpack-cli": "3.0.8",
        "webpack-dev-server": "3.1.4"
    }
}
